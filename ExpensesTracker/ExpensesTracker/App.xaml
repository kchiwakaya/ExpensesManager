<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensesTracker.App">
	<Application.Resources>
        <ResourceDictionary>
            <Style x:Key="HeadingStyle" TargetType="Label">
                <Setter Property="FontSize" Value="26"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="BrandonGrotesque-Regular"/>

            </Style>
            <Style x:Key="GreyButtonStyle" TargetType="Button">
                <Setter Property="TextColor" Value="AliceBlue"/>
                <Setter Property="FontFamily" Value="OpenSans"/>

            </Style>
            <!--<ControlTemplate x:Key="PostPageTemplate">
                <local:PostPageTemplate/>
            </ControlTemplate>-->
        </ResourceDictionary>
	</Application.Resources>
</Application>