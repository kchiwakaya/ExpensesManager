<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensesTracker.Views.AddIncome"
             BackgroundImage="achievement.jpg">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Done" Clicked="ToolbarItem_Clicked" Icon="outline_done_black_18dp.png"/>
        
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add Income" TextColor="Purple" FontSize="Large" HorizontalTextAlignment="Center"   />
            <Entry Placeholder="Amount" x:Name="In_Amount"/>
            <Picker  x:Name="CatList" Title="Select Category"/>
            <Entry Placeholder="Note to Self" x:Name="In_Note"/>
            <DatePicker x:Name="In_Date"/>
            <Button Text="Save" x:Name="BtnSave" 
                Clicked="BtnSave_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>