<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensesTracker.Views.AddExpense"
             BackgroundImage="achievement.jpg">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Done"  x:Name="_Done" Clicked="_Done_Clicked" Icon="outline_done_black_18dp.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="20">
            <StackLayout>
                <Label Text="New Expense" TextColor="Purple" FontSize="Medium"    />
                <Entry Placeholder="Amount Spent" x:Name="Ex_Amount" />
                <Picker x:Name="ExCatList" Title="Select Category"/>
                <Entry Placeholder="Note to Self" x:Name="Ex_Note"/>
                <DatePicker x:Name="Ex_Date" />
                <Button Text="Save" x:Name="BtnSave" 
                Clicked="BtnSave_Clicked"/>
            </StackLayout> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>